        </div>
        <br/>
        <div>
          <img src="<%= @images["two"] %>" class="image">
          <img src="<%= @images["five"] %>" class="image">
          <img src="<%= @images["eight"] %>" class="image">
        </div>
        <br/>
        <div>
          <img src="<%= @images["three"] %>" class="image">
          <img src="<%= @images["six"] %>" class="image">
        </div>
      </div>
      <br/>
      <h1 class="title">MUSIC</h1>
      <br/>
      <div class="images">
        <a href="/music/sometime">
          <img src="https://i.postimg.cc/mghfz154/cover.png" class="image">
        </a>
      </div>
    </div>

    <div class="sidebar">
      <div></div>
      <div>
        <h1 class="name">SAM SULLIVAN</h1>
        <p class="email">samsullivansemail@gmail.com</p>
        <a class="link" href="http://www.linkedin.com/in/samhsullivan">
          linkedin/samhsullivan
        </a>
        <p style="display:inline; float: right; margin: 0px;">&nbsp;</p>
        <a class="link" href="http://www.github.com/samsdotexe">
          github/samsdotexe
        </a>
